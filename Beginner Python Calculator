# simple python calculator for beginners.
import math

operator = input('enter an operator (+ - * /): ').strip()
num1 = float(input('input the 1st number: '))
num2 = float(input('input the 2nd number: '))

if operator == "+":
    result = num1 + num2
    print(round(result,3))
elif operator == "-":
    result = num1 - num2
    print(round(result, 3))
elif operator == "*":
    result = num1 * num2
    print(round(result, 3))
elif operator == "/":
    result = num1 / num2
    print(round(result, 3))
else:
    print(f"you have entered an invalid operator. ({operator}) is not valid! ")
